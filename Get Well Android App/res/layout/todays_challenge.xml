<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:text="TODAY&apos;S CHALLENGE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#1E90FF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:text="Find as much change as you can around your house and put it in a jar."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="FINANCIAL WELLNESS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#228B22"
        android:textStyle="italic"
         />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/acceptButton"
        android:layout_alignRight="@+id/declineButton"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:textStyle="italic"
        android:text="PRO TIP - On Average, setting aside small change daily can add up to $50 a month!"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/declineButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="46dp"
        android:layout_toRightOf="@+id/acceptButton"
        android:background="@drawable/button_decline"
        android:drawableLeft="@drawable/decline_icon"
        android:text="DECLINE"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/declineButton"
        android:layout_alignBottom="@+id/declineButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:background="@drawable/button_accept"
        android:drawableLeft="@drawable/accept_icon"
        android:text="ACCEPT"
        android:textColor="#000000"
        android:textStyle="bold" />

</RelativeLayout>
